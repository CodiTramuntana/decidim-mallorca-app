<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t('.title') %>
    </h2>
  </div>
  <div class="card-section">
  <%= form_for @organization, url: consell_mallorca_admin_authorization_config_path, html: { class: 'form' } do |f| %>
    <%= f.select :consell_mallorca_municipality_code, municipalities_options_for_select, prompt: true %>
    <%= f.submit t('.submit') %>
    <%= link_to t('.cancel'), edit_consell_mallorca_admin_authorization_config_path, class: 'button secondary' %>
  <% end %>
  </div>
</div>
